html(lang='ru-RU')
  head
    meta(charset='utf-8')
    title Наша семья Пинза.Ру!
    meta(name='description', content='Сайт семьи Пинзару')
    meta(name='author', content='')
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/bootstrap-responsive.min.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='js/jquery-1.7.1.min.js')
    script(src='js/bootstrap.js')
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
  body
    .wrapper.container
      .logo
        img(src='img/logo.jpg', alt='Пинза.Ру')
      .window
        #chat
          #messages
            #l_message
              img(src="img/lesya_av.jpg", alt="Леся")
              img(src="img/l_chat.png")
              div#l_msg Привет, родное сердце! Как всегда, я опоздада на поезд, а он не пришел!
            #a_message
              img(src="img/andrey_av.jpg", alt="Андрей")
              img(src="img/a_chat.png")
              div#a_msg Привет, родное сердце! Ничего, я все равно тебя жду, проголодался очень!!   
            #l_message
              img(src="img/lesya_av.jpg", alt="Леся")
              img(src="img/l_chat.png")
              div#l_msg Хорошо, еду!
          form#send-message
            input#message
            input#heart(type="image", src="img/heart.png")
            input#hellowin(type="image", src="img/hellowin.png")
            input#shop(type="image", src="img/shopping.png")
            input#garbage(type="image", src="img/garbage.png")
            input#phone(type="image", src="img/phone.png")
            input#sms(type="checkbox")
            span Дублировать по SMS
            button Отправить

        
